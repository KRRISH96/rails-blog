<h1>Articles Index page!</h1>
<%= link_to 'Home', root_path %>

<% if @all_articles.present? %>
  <div>
    <%= link_to "Create a new article", new_article_path %>
    <table>
      <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @all_articles.each do |article| %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.created_at.strftime("%b %d, %Y at %I:%M%p") %></td>
            <td><%= article.updated_at.strftime("%b %d, %Y at %I:%M%p") %></td>
            <td>
              <%= link_to "Edit", edit_article_path(article) %>
              <%= link_to "Show", article_path(article) %>
              <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure to delete?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <h4>No Articles found!</h4>
<% end %>